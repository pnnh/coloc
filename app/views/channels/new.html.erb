<!DOCTYPE html>
<html>
<head>
    <title>创建频道</title>
    <%= render 'layouts/header' %>
    <%= javascript_include_tag 'channels' %>
</head>
<body>

<%= render 'layouts/navbar' %>

<div class="body flex-container channels">
    <div class="box">
        <div class="box-body">
        <%= render :partial => 'errors', :object => @channel.errors %>
        <%= form_for @channel, url: request.path.sub('/new', '') do |f| %>
            <%= f.hidden_field :visible %>
            <div class="form-group">
                <%= f.text_field :title, placeholder: '标题', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.text_area :description, placeholder: '描述', class: 'form-control', rows:10 %>
            </div>
            <div class="form-group">
                <%= f.text_field :tags, placeholder: '标签', class: 'form-control' %>
            </div>
            <%= f.submit '保存', class: 'btn btn-default', onclick: 'setVisible(0);' %>
        <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>