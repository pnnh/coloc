<!DOCTYPE html>
<html>
<head>
    <title>频道</title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, action: channels_path,
                   placeholder: '搜索频道' %>
        <%= render 'layouts/navmenu', wrapper: true %>
    </div>
</nav>

<div class="container channels">
    <% @channels.each do |c| %>
        <div class="post">
            <h2>
                <%= link_to c['title'], contents_path(c['id'], c['ctype']) %>
            </h2>
            <small>&nbsp;</small>
            <div class="entry">
                <div class="c_b_p_desc"><%= c['description'] %></div>
            </div>
            <ul class="postmetadata">
                <li class="icon_bullet">
                    <% (c['tags'] || '').split(',').map do |t| %>
                        <%= link_to t, request.path + '?keyword=' + t.strip %>&nbsp;
                    <% end %>&nbsp;
                </li>
            </ul>
        </div>
    <% end %>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
