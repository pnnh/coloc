<!DOCTYPE html>
<html>
<head>
    <title><%= @channel.title %>-修改</title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo' %>
        <form method="get" action="<%= channels_path %>" class="navbar-form navbar-left search">
            <div class="form-group">
                <input name="keyword" type="text" value="<%= params[:keyword]%>"
                       class="form-control search" maxlength="30"
                       placeholder="搜索频道">
            </div>
        </form>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <%= render 'layouts/navmenu' %>
        </div>
    </div>
</nav>

<div class="container channels">
    <div class="post post-list-item">
        <div class="entry">
            <%= form_for @channel, url: request.path.sub('/edit', '') do |f| %>
                <div class="form-group">
                    <%= f.label :title, '标题' %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :description, '描述' %>
                    <%= f.text_area :description, class: 'form-control', rows:10 %>
                </div>
                <div class="form-group">
                    <%= f.label :tags, '标签' %>
                    <%= f.text_field :tags, class: 'form-control' %>
                </div>
                <%= f.submit '提交', class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>