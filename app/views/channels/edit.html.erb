<!DOCTYPE html>
<html>
<head>
    <title>修改频道</title>
    <%= render 'layouts/header' %>
</head>
<body>

<%= render 'layouts/navbar' do %>
<% end %>

<div id="fixed-before" class="sub-header">
</div>

<div class="body flex-container channels">
    <div class="box">
        <div class="box-body">
            <%= form_for @channel, url: request.path.sub('/edit', '') do |f| %>
                <div class="form-group">
                    <%= f.text_field :title, placeholder: '标题', class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, placeholder: '描述', class: 'form-control', rows:10 %>
                </div>
                <div class="form-group">
                    <%= f.text_field :tags, placeholder: '标签', class: 'form-control' %>
                </div>
                <%= f.submit '保存', class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>