<!DOCTYPE html>
<html>
<head>
    <title><%=@channel.title %>-宇哲</title>
    <%= render 'layouts/header' %>
    <meta name="keywords" content="<%=@channel.tags%>">
    <meta name="description" content="<%=trunc_desc(@channel.description)%>" />
    <meta name="author" content="<%=@channel.user.name%>">
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, action: channels_path,
           placeholder: '搜索频道' %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-haspopup="true" aria-expanded="false">
                        频道<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to '查看内容', @channel.contents_path %></li>
                        <% if signed_in? && !current_user?(@channel.user_id) %>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to '收藏', channel_follows_path(channel_id: @channel.id),
                            method: 'post' %></li>
                        <% end %>
                        <% if current_user?(@channel.user_id) %>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to '修改', edit_channel_path(@channel) %></li>
                        <% end %>
                    </ul>
                </li>
                <%= render 'layouts/navmenu' %>
            </ul>
        </div>
    </div>
</nav>

<div class="container channels">
    <div class="post post-list-item">
        <h2>
            <%= @channel.title %>
        </h2>
        <small>&nbsp;</small>
        <div class="entry">
            <%= @channel.description %>
        </div>
        <ul class="postmetadata">
            <li class="icon_bullet">
                <% (@channel.tags || '').split(',').map do |t| %>
                    <%= t.strip %>&nbsp;
                <% end %>&nbsp;
            </li>
        </ul>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>