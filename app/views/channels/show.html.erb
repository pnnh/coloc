<% provide(:title, @channel.name) %>

<% content_for :nav do %>
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                添加 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu dropdown-menu-left">
                <li><%= link_to "文章", new_content("articles") %></li>
                <li class="divider"></li>
                <li>
                    <%= link_to "频道", new_content("channels") %>
                </li>
            </ul>
        </li>
        <li><%= link_to "修改", edit_current_content %></li>
        <% if (@content_id != 1) %>
            <li><%= link_to "返回", content_parent %></li>
        <% end %>
    </ul>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= @channel.name %>
    </div>
    <div class="form-group">
      <%= @channel.description %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% for c in @contents %>
        <div class="form-group">
          <p>
            <span style="color:#105cb6;font-size:14px;">
              <%= link_to c.name, content(c) %>
            </span>
          </p>
          <p>
            <%= c.description %>
          </p>
        </div>
    <%end%>
  </div>
</div>