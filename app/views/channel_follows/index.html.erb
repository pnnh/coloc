<!DOCTYPE html>
<html>
<head>
    <title>频道收藏</title>
    <%= render 'layouts/header' %>
    <%= stylesheet_link_tag  'channels' %>
</head>
<body>

<nav class="header navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, action: channel_follows_path,
                   placeholder: '频道收藏' %>
        <%= render 'layouts/navmenu', wrapper: true %>
    </div>
</nav>

<div class="body container channels">
    <div class="row">
        <div class="col-md-12">
            <% @follows.each do |c|
                channel = Channel.new(id: c['channel_id'], title: c['title'], ctype: c['ctype'],
                                      description: c['description']) %>
                <div class="post block">
                    <h4>
                        <%= link_to channel.title, contents_path(channel.id, channel.ctype), class: 'title' %>
                    </h4>
                    <div class="entry">
                        <div class="c_b_p_desc"><%= trunc_desc(channel.description) %></div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= render 'layouts/footer' %>
</body>
</html>
