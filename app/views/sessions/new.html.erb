<!DOCTYPE html>
<html>
<head>
    <title>登陆</title>
    <%= render 'layouts/header' %>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', search: false %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <%= render 'layouts/navmenu' %>
        </div>
    </div>
</nav>
<div class="container signin">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <%= form_for(:session, url: sessions_path) do |f| %>
            <div class="form-group">
                <%= f.text_field :email, placeholder: '邮箱', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, placeholder: '密码', class: 'form-control' %>
            </div>
            <%= f.submit '登录', class: 'btn btn-default login' %>
            <%= link_to '注册', signup_path , class: 'btn btn-default register'%>
        <% end %>
    </div>
    <div class="col-md-4"></div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
