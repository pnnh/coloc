<% provide(:title, @user.name) %>

<% content_for :nav do %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "设置", edit_user_path(current_user) %></li>
      <li><%= link_to "注销", signout_path, method: "delete" %></li>
    </ul>
<% end %>

<div class="col-md-12">
  <div class="form-group">
    <%= @user.name %>
  </div>
  <div class="form-group">
    <%= @user.email %>
  </div>
  <div class="form-group">
    <%= @user.created_at.strftime('%Y-%m-%d') %>
  </div>
</div>
