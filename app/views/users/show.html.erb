<!DOCTYPE html>
<html>
<head>
    <title><%= @user.name %></title>
    <%= render 'layouts/header' %>
</head>
<body>

<%= render 'layouts/navbar' do %>
<% end %>

<div id="fixed-before" class="sub-header">
</div>

<div class="flex-container">
    <div class="box card">
        <div class="form-group">
            <%= label_tag '姓名' %>
            <%= @user.name %>
        </div>
        <div class="form-group">
            <%= label_tag '邮箱' %>
            <%= @user.email %>
        </div>
        <div class="form-group">
            <%= label_tag '注册日期' %>
            <%= @user.created_at %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
