<%  showForm = form rescue nil %>
<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">
        <img alt="logo" src="/assets/coloc.gif">
    </a>
</div>
<% if showForm
   formAction = (action rescue nil) || '/'
   inputPlaceHolder = (placeholder rescue nil) || '搜索' %>
    <form method="get" action="<%= formAction %>" class="navbar-form navbar-left search">
        <div class="form-group">
            <input name="keyword" type="text" value="<%= params[:keyword]%>"
                   class="form-control search" maxlength="30"
                   placeholder="<%= inputPlaceHolder %>">
        </div>
    </form>
<% end %>
