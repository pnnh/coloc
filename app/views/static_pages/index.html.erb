<!DOCTYPE html>
<html>
<head>
    <title>宇哲</title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo'%>
        <form method="get" action="<%= channels_path %>" class="navbar-form navbar-left search">
            <div class="form-group">
                <input name="keyword" type="text" value="<%= params[:keyword]%>"
                       class="form-control search" maxlength="30"
                       placeholder="搜索频道">
            </div>
        </form>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <% if signed_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            频道<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to '创建', new_channel_path %></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            收藏<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to '频道', user_channels_path %></li>
                            <li><%= link_to '文章', '#' %></li>
                        </ul>
                    </li>
                <% end %>
                <%= render 'layouts/navmenu' %>
            </ul>
        </div>

    </div>
</nav>
<div class="container channels">
    <div class="jumbotron">
        <h1>宇哲</h1>
        <p><%= @slogan.words %></p>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
