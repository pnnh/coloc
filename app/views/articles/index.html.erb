<!DOCTYPE html>
<html>
<head>
    <title><%=@channel.title%></title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', search: true %>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
            <%= render 'layouts/navmenu' %>
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to '上级', root_path %></li>
                <li><%= link_to '新增', new_channel_article_path %></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="container channels">
    <% @articles.each do |article| %>
        <div class="post post-list-item">
            <h2>
                <%= link_to article.title, channel_article_path(@channel, article) %>
            </h2>
            <small>&nbsp;</small>
            <div class="entry">
                <div class="c_b_p_desc"><%= truncate(article.content) %></div>
            </div>
        </div>
    <%end%>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
