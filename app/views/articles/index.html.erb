<!DOCTYPE html>
<html>
<head>
    <title><%=@channel.title%>-宇哲</title>
    <%= render 'layouts/header' %>
    <meta name="keywords" content="<%=@channel.tags%>">
    <meta name="description" content="<%=trunc_desc(@channel.description)%>" />
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, placeholder: '搜索文章',
                   action: channel_articles_path(@channel) %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-haspopup="true" aria-expanded="false">
                        频道<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <% if signed_in? %>
                            <li><%= link_to '写文章', new_channel_article_path %></li>
                            <li role="separator" class="divider"></li>
                        <% end %>
                        <li><%= link_to '查看详情', channel_path(@channel) %></li>
                    </ul>
                </li>
                <%= render 'layouts/navmenu' %>
            </ul>
        </div>
    </div>
</nav>

<div class="container channels">
    <% @articles.each do |article| %>
        <div class="post post-list-item">
            <h2>
                <%= link_to article.title, channel_article_path(@channel, article) %>
            </h2>
            <small>&nbsp;</small>
            <div class="entry">
                <div class="c_b_p_desc"><%= trunc_desc(article.content) %></div>
            </div>
            <% if article.tags %>
                <ul class="postmetadata">
                    <li class="icon_bullet">
                        <% article.tags.split(',').map do |t| %>
                            <%= link_to t, request.path + '?keyword=' + t.strip %>&nbsp;
                        <% end %>&nbsp;
                    </li>
                </ul>
            <% end %>
        </div>
    <%end%>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
