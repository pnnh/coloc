<!DOCTYPE html>
<html>
<head>
    <title><%= @article.title %>-文章修改-宇哲</title>
    <%= render 'layouts/header' %>
    <%= stylesheet_link_tag  'articles', media: 'all' %>
    <%= javascript_include_tag 'articles' %>
</head>
<body>

<%= form_for @article, url: request.path.sub('/edit', '') do |f| %>
    <%= f.hidden_field :visible %>

<%= render 'layouts/navbar' do %>
    <a href="javascript:void(0)" class="table-card-cell rcard" onclick="setVisible(0)">
        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        公开
    </a>
    <a href="javascript:void(0)" class="table-card-cell rcard" onclick="setVisible(1)">
        <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
        匿名
    </a>
    <a href="javascript:void(0)" class="table-card-cell rcard" onclick="setVisible(2)">
        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
        私有
    </a>
    <a href="<%=channel_article_path(@channel, @article.id)%>" class="table-card-cell rcard">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        取消
    </a>
<% end %>

<div id="fixed-before" class="channel-title">
    <div class="flex-container">
        <div class="flex-content card">
            <% if current_user.admin %>
                <div class="input-group input-select-group">
                    <%= text_field_tag 'article[title]', @article.title, placeholder: '标题', class: 'form-control' %>
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="title"><%= @items[@article.ctype] %></span><span class="caret"></span>
                        </button>
                        <%= hidden_field_tag 'article[ctype]', @article.ctype, class: 'dropdown-value' %>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <% @items.each do |v,t| %>
                                <li><a href="javascript:void(0)" data-value="<%= v %>"><%= t %></a></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% else %>
                <div class="form-group">
                    <%= f.text_field :title, placeholder: '标题', class: 'form-control' %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="body flex-container-21 clearfix article">
        <div class="flex-left">
            <div class="flex-body">
                <div class="box">
                    <div class="box-body">
                        <%= f.text_area :content, placeholder: '正文', class: 'form-control auto-height content' %>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-right">
            <div id="fixed" class="flex-body">
                <div class="box tags">
                    <div class="box-title">
                        标签
                    </div>
                    <div class="box-body">
                        <%= f.text_area :tags, placeholder: '标签', class: 'form-control auto-height' %>
                    </div>
                </div>
                <div class="box recomends">
                    <div class="box-title">
                        版权
                    </div>
                    <div class="box-body">
                        <%= f.text_area :copyright, placeholder: '版权', class: 'form-control auto-height' %>
                    </div>
                </div>
            </div>
        </div>
</div>
<% end %>
<div id="fixed-spy" style="display:none">
    <ul class="nav nav-tabs" role="tablist">
        <li><a href="#fixed-before">home-before</a></li>
        <li><a href="#fixed">home</a></li>
    </ul>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
