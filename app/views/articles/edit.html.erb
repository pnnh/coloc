<% provide(:title, "修改-" + @article.title ) %>

<div class="row">
  <div class="col-md-12">  
    <%= render partial: 'shared/errors', object: @article.errors %>
    <%= form_for @article, url: update_article_url do |f| %>
    <div class="form-group">
      <%= f.label :title, "标题" %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content, "正文" %>
      <%= f.text_area :content, class:"form-control", rows:30 %>
    </div>
    <%= f.submit "提交", class:"btn btn-default" %>
    <% end %>
  </div>
</div>
