<!DOCTYPE html>
<html>
<head>
    <title>写文章</title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo' %>
        <div class="collapse navbar-collapse">
            <%= render 'layouts/navmenu' %>
        </div>
    </div>
</nav>

<div class="container">
    <div class="post post-list-item">
        <div class="entry">
            <%= render partial: 'shared/errors', object: @article.errors %>
            <%= form_for @article, url: channel_articles_path do |f| %>
                <div class="form-group">
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.text_area :content, class: 'form-control', rows: 30 %>
                </div>
                <%= f.submit '提交', class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
