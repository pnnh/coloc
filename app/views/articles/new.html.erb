<% provide(:title, '新建条目') %>

<% content_for :nav do %>
    <ul class="nav navbar-nav">
        <li><%= link_to '返回', content_entity_url %></li>
    </ul>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article, url: content_entities_url('Article') do |f| %>
    <%= render partial: 'shared/errors', object: @article.errors %>
    <div class="form-group">
      <%= f.label :title, '标题' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text, '正文' %>
      <%= f.text_area :text, class: 'form-control', rows:30 %>
    </div>
        <%= f.submit '确定', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
