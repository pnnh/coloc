<% provide(:title, '新建条目') %>

<% content_for :nav do %>
    <ul class="nav navbar-nav">
        <li><%= link_to "返回", content_current  %></li>
    </ul>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article, url: contents_current do |f| %>
    <%= render partial: 'shared/errors', object: @article.errors %>
    <div class="form-group">
      <%= f.label :title, "标题" %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content, "正文" %>
      <%= f.text_area :content, class:"form-control", rows:30 %>
    </div>
        <%= f.submit "确定", class:"btn btn-default" %>
    <% end %>
  </div>
</div>
