<!DOCTYPE html>
<html>
<head>
    <title>写文章-宇哲</title>
    <%= render 'layouts/header' %>
    <%= javascript_include_tag 'articles' %>
</head>
<body>

<nav class="header navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, placeholder: '搜索文章',
                   action: channel_articles_path(@article.channel_id) %>
        <%= render 'layouts/navmenu', wrapper: true %>
    </div>
</nav>

<div class="body container">
    <div class="block">
        <%= render :partial => 'errors', :object => @article.errors %>
        <%= form_for @article, url: request.path.sub('/new', '') do |f| %>
            <%= f.hidden_field :visible %>
            <div class="form-group">
                <%= f.text_field :title, placeholder: '标题', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.text_area :content, placeholder: '正文', class: 'form-control', rows: 20 %>
            </div>
            <div class="form-group">
                <%= f.text_field :tags, placeholder: '标签', class: 'form-control' %>
            </div>
            <%= f.submit '公开', class: 'btn btn-default', onclick: 'setVisible(0);' %>
            <%= f.submit '匿名', class: 'btn btn-default', onclick: 'setVisible(1);' %>
        <% end %>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
