<!DOCTYPE html>
<html>
<head>
    <title>写文章-宇哲</title>
    <%= render 'layouts/header' %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, placeholder: '搜索文章',
                   action: channel_articles_path(@article.channel_id) %>
        <%= render 'layouts/navmenu', wrapper: true %>
    </div>
</nav>

<div class="container">
    <div class="post post-list-item">
        <div class="entry">
            <%= render :partial => 'errors', :object => @article.errors %>
            <%= form_for @article, url: request.path.sub('/new', '') do |f| %>
                <div class="form-group">
                    <%= f.text_field :title, placeholder: '标题', class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.text_area :content, placeholder: '正文', class: 'form-control', rows: 30 %>
                </div>
                <div class="form-group">
                    <%= f.text_field :tags, placeholder: '标签', class: 'form-control' %>
                </div>
                <%= f.submit '提交', class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
