<!DOCTYPE html>
<html>
<head>
    <title><%=@article.title%>-文章详情-宇哲</title>
    <link href="/highlight.js/styles/github.css" rel="stylesheet">
    <%= render 'layouts/header' %>
    <meta name="keywords" content="<%=@article.tags%>">
    <meta name="description" content="<%=trunc_desc(@article.content)%>" />
    <meta name="author" content="<%=@article.user.name%>">
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <%= render 'layouts/navlogo', form: true, placeholder: '搜索文章',
                   action: channel_articles_path(@article.channel_id) %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li ><%=link_to '上级', request.path.sub(@article.id.to_s, '') %></li>
                <% if current_user?(@article.user) %>
                    <li ><%=link_to '修改', request.path + '/edit' %></li>
                <% end %>
                <%= render 'layouts/navmenu' %>
            </ul>
        </div>
    </div>
</nav>

<div class="container channels">
        <div class="post post-list-item">
            <h2>
                <%= @article.title %>
            </h2>
            <small>&nbsp;</small>
            <div class="entry">
                <%= raw markup('markdown', @article.content) %>
            </div>
            <ul class="postmetadata">
                <li class="icon_bullet">
                    <% (@article.tags || '').split(',').map do |t| %>
                        <%= t.strip %>&nbsp;
                    <% end %>&nbsp;
                </li>
            </ul>
        </div>
</div>
<%= render 'layouts/footer' %>
<script src="/highlight.js/highlight.pack.js"></script>
<script type="text/javascript">
    if(window.hljs) window.hljs.initHighlighting();
</script>
</body>
</html>
