<% provide(:title, @article.title ) %>

<% content_for :nav do %>
    <ul class="nav navbar-nav">
        <li><%= link_to "修改", edit_article_url  %></li>
        <li><%= link_to "返回", show_content(@content.content)  %></li>
    </ul>
<% end %>

<% content_for :head do %>
    <style type="text/css">
      <%=Pygments.css('.highlight')%>
    </style>
<% end %>

<div class="row">
  <div class="col-md-12">
    <p style="font-size: 25px;font-weight: bolder;">
      <%= @article.title %>
    </p>
    <div>
      <%= raw markup('markdown', @article.content) %>
    </div>
  </div>
</div>