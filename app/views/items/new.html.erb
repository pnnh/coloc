<% provide(:title, 'New Item') %>
<h1>New Item</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
