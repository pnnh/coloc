<% provide(:title, "Edit Item") %>
<h1>Update item</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
    <%= render :partial => 'shared/errors', :object => @item.errors %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
