<% provide(:title, "编辑条目")
   provide(:search_act, items_path) %>

<% content_for :navbar do %>
<li><%= link_to "创建", new_item_path %></li>
<li><%= link_to "阅读", item_path(@item) %></li>
<li class="active"><%= link_to "编辑", edit_item_path(@item) %></li>
<% end %> 

<div class="row">
  <div class="col-md-12">  
    <%= render partial: 'shared/errors', object: @item.errors %>
    <%= form_for @item do |f| %>
    <div class="form-group">
      <%= f.label :markup, "标记" %>
      <%= f.select :markup, all_markups, {}, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content, "正文" %>
      <%= f.text_area :content, class:"form-control", rows:50 %>
    </div>
    <%= f.submit "提交", class:"btn btn-default" %>
    <% end %>
  </div>
</div>
